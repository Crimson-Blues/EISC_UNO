<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.eiscuno.controller.GameUnoController">
   <children>
      <ImageView fitHeight="521.0" fitWidth="635.0" layoutY="-21.0">
         <image>
            <Image url="@images/casino_background.jpg" />
         </image>
      </ImageView>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="635.0" style="-fx-background-color: transparent;">
         <left>
            <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Button layoutX="28.0" layoutY="-7.0" mnemonicParsing="false" onAction="#onHandleTakeCard" style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fx:id="deckImageView" fitHeight="169.0" fitWidth="106.0">
                           <image>
                              <Image url="@images/Back_card.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </Pane>
         </left>
         <right>
            <Pane prefHeight="194.0" prefWidth="190.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="unoButton" layoutX="26.0" layoutY="43.0" mnemonicParsing="false" onAction="#onHandleUno" prefHeight="97.0" prefWidth="169.0" style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fx:id="unoImageView" fitHeight="104.0" fitWidth="154.0" preserveRatio="true">
                           <image>
                              <Image url="@images/UNO_shout.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
               </children>
            </Pane>
         </right>
         <center>
            <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="tableImageView" fitHeight="149.0" fitWidth="100.0" layoutX="50.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </Pane>
         </center>
         <top>
            <AnchorPane BorderPane.alignment="CENTER">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="106.0" prefWidth="635.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="106.0" prefWidth="600.0" spacing="20.0">
                           <children>
                              <GridPane fx:id="gridPaneCardsMachine" alignment="CENTER" prefHeight="106.0" prefWidth="365.0">
                                <columnConstraints>
                                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                 </rowConstraints>
                              </GridPane>
                           </children>
                        </HBox>
                        <Label fx:id="errorLabel" styleClass="error-label" stylesheets="@styles.css">
                           <font>
                              <Font name="Bernard MT Condensed" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <ImageView fitHeight="36.0" fitWidth="57.0" preserveRatio="true">
                     <image>
                        <Image url="@images/UNO_logo.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
         </top>
         <bottom>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#onHandleBack" styleClass="menu_button" stylesheets="@styles.css" text="Anterior" textFill="WHITE">
                     <font>
                        <Font name="Berlin Sans FB" size="12.0" />
                     </font>
                  </Button>
                  <GridPane fx:id="gridPaneCardsPlayer">
                    <columnConstraints>
                      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                  </GridPane>
                  <Button mnemonicParsing="false" onAction="#onHandleNext" styleClass="menu_button" stylesheets="@styles.css" text="Siguiente" textFill="WHITE" />
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
